/* custom */
@import 'modules/margin.wxss';
@import 'modules/padding.wxss';
@import 'modules/flex.wxss';


view,
button,
input,
textarea {
    box-sizing: border-box;
}

.page {
    color: #333;
    font-size: 28rpx;
}

.page-bg-primary {
    min-height: 100vh;
    background: #F3F3F5;
}

.darker {
    filter: brightness(.9);
    opacity: 1;
}

.gutter {
    height: 12rpx;
    background: #F3F3F5;
}

.btn-reset {
    padding: 0;
    margin: 0;
    line-height: 1;
    background: none;
    border-radius: 0;
}

.btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 80rpx;
    border: none;
    border-radius: 50rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #fff;
    background: #333;
}

.btn-primary {
    background: linear-gradient(360deg, rgba(248, 174, 90, 1) 0%, rgba(255, 205, 135, 1) 100%);
    box-shadow: 0rpx 12rpx 20rpx -10rpx rgba(243, 169, 85, 0.5);
    border-radius: 12rpx;
}

.btn-second {
    background: linear-gradient(360deg, rgba(243, 125, 84, 1) 0%, rgba(255, 178, 139, 1) 100%);
    box-shadow: 0rpx 12rpx 20rpx -10rpx rgba(244, 126, 85, 0.5);
    border-radius: 12rpx;
}

.aspect-ratio--object {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
}

