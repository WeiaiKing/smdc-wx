.footer {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    border-top: 1px solid rgba(0, 0, 0, 0.15);
    background-color: white;
}

.footer .pay-btn {
    width: 330rpx;
    height: 80rpx;
    background: rgba(51, 51, 51, 1);
    border-radius: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer .pay-img {
    width: 40rpx;
    height: 40rpx;
}

.footer .pay-text {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
}