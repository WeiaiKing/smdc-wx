/* pages/product-list/product-list.wxss */
.page {
    height: 100vh;
    overflow: hidden
}

::-webkit-scrollbar {
    width: 0.1rpx;
    /*滚动条宽度*/
    height: 16px;
    /*滚动条高度*/
}

.header {
    padding: 40rpx;
}

.header .logo-img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.header-title_text {
    font-weight: 500;
    font-size: 40rpx;
}

.header-btn-icon {
    width: 32rpx;
    height: 40rpx;
}

.header-btn-wrapper {
    width: 330rpx;
    position: relative
}

.header-btn-container {
    justify-content: space-between;
    padding: 0 30rpx;
    font-size: 30rpx;
}

.header-btn .news {
    width: 48rpx;
    height: 34rpx;
    background: linear-gradient(360deg, rgba(249, 59, 59, 1) 0%, rgba(255, 122, 107, 1) 100%);
    border-radius: 17rpx;
    border: 2rpx solid rgba(255, 255, 255, 1);
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    position: absolute;
    right: -10rpx;
    top: -13rpx;
}

.search {
    padding: 20rpx 40rpx;
}

.search-wrapper {
    width: 100%;
    height: 100%;
    border: 1px solid #dad6d6;
    border-radius: 15rpx;
    padding: 8rpx;
    display: flex;
    align-items: center
}

.search_img {
    width: 64rpx;
    height: 64rpx;
    margin-right: 8rpx;
}

.search .inp_text {
    font-size: 28rpx;
    color: #A8ACB2
}

.search-cancel {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    margin-left: 30rpx;
    width: 90rpx;
}

/* .main {
    height: 100%;
} */

.mainbg_color {
    background-color: rgba(200, 200, 200, 0.08);
}

.menu-scoll-container {
    width: 574rpx;
    max-height: 1000rpx;
    overflow-y: scroll;
}

/* vant tree 组件 start */
.tree-container {
    width: 174rpx;
}

.tree-container .van-tree-select {
    display: block;
}

.tree-container .van-sidebar-item--selected {
    border-color: var(--sidebar-selected-border-color, #151615);
}

/* vant tree 组件 end */